<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/ios_black"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/workingsTV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="end|bottom"
        android:padding="20dp"
        android:text=""
        android:textColor="@color/ios_light_gray"
        android:textSize="30sp"
        android:maxLines="1"
        android:ellipsize="end" />

    <TextView
        android:id="@+id/resultTV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:gravity="end|bottom"
        android:padding="20dp"
        android:text="0"
        android:textColor="@color/ios_white"
        android:textSize="80sp"
        android:maxLines="1"
        android:ellipsize="end" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5"
        android:columnCount="4"
        android:rowCount="5"
        android:padding="10dp">

        <Button android:id="@+id/ac" android:layout_columnWeight="1" android:layout_rowWeight="1" android:text="AC" style="@style/CalculatorButton.Gray" />
        <Button android:id="@+id/plusMinus" android:layout_columnWeight="1" android:layout_rowWeight="1" android:text="+/-" style="@style/CalculatorButton.Gray" />
        <Button android:id="@+id/percent" android:layout_columnWeight="1" android:layout_rowWeight="1" android:text="%" style="@style/CalculatorButton.Gray" />
        <Button android:id="@+id/divide" android:layout_columnWeight="1" android:layout_rowWeight="1" android:text="รท" style="@style/CalculatorButton.Orange" />

        <Button android:id="@+id/seven" android:layout_columnWeight="1" android:layout_rowWeight="1" android:text="7" style="@style/CalculatorButton.DarkGray" />
        <Button android:id="@+id/eight" android:layout_columnWeight="1" android:layout_rowWeight="1" android:text="8" style="@style/CalculatorButton.DarkGray" />
        <Button android:id="@+id/nine" android:layout_columnWeight="1" android:layout_rowWeight="1" android:text="9" style="@style/CalculatorButton.DarkGray" />
        <Button android:id="@+id/multiply" android:layout_columnWeight="1" android:layout_rowWeight="1" android:text="ร" style="@style/CalculatorButton.Orange" />

        <Button android:id="@+id/four" android:layout_columnWeight="1" android:layout_rowWeight="1" android:text="4" style="@style/CalculatorButton.DarkGray" />
        <Button android:id="@+id/five" android:layout_columnWeight="1" android:layout_rowWeight="1" android:text="5" style="@style/CalculatorButton.DarkGray" />
        <Button android:id="@+id/six" android:layout_columnWeight="1" android:layout_rowWeight="1" android:text="6" style="@style/CalculatorButton.DarkGray" />
        <Button android:id="@+id/minus" android:layout_columnWeight="1" android:layout_rowWeight="1" android:text="-" style="@style/CalculatorButton.Orange" />

        <Button android:id="@+id/one" android:layout_columnWeight="1" android:layout_rowWeight="1" android:text="1" style="@style/CalculatorButton.DarkGray" />
        <Button android:id="@+id/two" android:layout_columnWeight="1" android:layout_rowWeight="1" android:text="2" style="@style/CalculatorButton.DarkGray" />
        <Button android:id="@+id/three" android:layout_columnWeight="1" android:layout_rowWeight="1" android:text="3" style="@style/CalculatorButton.DarkGray" />
        <Button android:id="@+id/plus" android:layout_columnWeight="1" android:layout_rowWeight="1" android:text="+" style="@style/CalculatorButton.Orange" />

        <Button android:id="@+id/zero" android:layout_columnWeight="1" android:layout_rowWeight="1" android:layout_columnSpan="2" android:text="0" style="@style/CalculatorButton.DarkGray" />
        <Button android:id="@+id/decimal" android:layout_columnWeight="1" android:layout_rowWeight="1" android:text="." style="@style/CalculatorButton.DarkGray" />
        <Button android:id="@+id/equals" android:layout_columnWeight="1" android:layout_rowWeight="1" android:text="=" style="@style/CalculatorButton.Orange" />

    </GridLayout>

</LinearLayout>
